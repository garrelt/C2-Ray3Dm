#--------GADGET-------------------------------------------------------------------------------

clean : 
	rm -f *.o *.mod *.l *.il

.f.o:
	$(F90) -c $(F90FLAGS) $<

.f90.o:
	$(F90) -c $(F90FLAGS) $<

.F90.o:
	$(F90) -c $(F90FLAGS) $<

f.mod:
	$(F90) -c $(F90FLAGS) $<

.SUFFIXES: .f90 .F90 .mod .o


